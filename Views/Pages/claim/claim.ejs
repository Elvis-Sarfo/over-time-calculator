<div class="content container-fluid">
  <!-- Page Header -->
  <div class="page-header">
    <div class="row align-items-center">
      <div class="col">
        <h3 class="page-title">Claim</h3>
        <ul class="breadcrumb">
          <li class="breadcrumb-item"><a href="index">Dashboard</a></li>
          <li class="breadcrumb-item active">Claim</li>
        </ul>
      </div>
    </div>
  </div>
  <!-- /Page Header -->

  <div class="row">
    <div class="col-sm-12">
      <div class="card card-table">
        <div class="card-body">
          <!-- Page Header -->
          <div class="page-header">
            <div class="row align-items-center">
              <div class="col">
                <h3 class="page-title">Claim</h3>
              </div>
              <div class="col-auto text-end float-end ms-auto download-grp">
                <a href="#" class="btn btn-outline-primary me-2"
                  ><i class="fas fa-download"></i> Download</a
                >
                <a href="add-claim" class="btn btn-primary"
                  ><i class="fas fa-plus"></i
                ></a>
              </div>
            </div>
          </div>
          <!-- /Page Header -->
          <div class="table-responsive">
            <table
              class="table border-0 star-student table-hover table-center mb-0 datatable table-striped"
            >
              <thead class="student-thread">
                <tr>
                  <th>Lecturer ID</th>
                  <th>Designation</th>
                  <th>Status</th>
                  <th class="text-end">Action</th>
                </tr>
              </thead>
              <tbody>
                <%reluser.forEach(user=>{%>
                <tr>
                  <td><%=user.nic%></td>
                  <td><%=user.designation%></td>
                  <td><span class="badge bg-info"><%=user.approval_status%></span></td>
                  <td class="text-end">
                    <div class="actions">
                      <!-- <a
                        href="javascript:;"
                        class="btn btn-sm bg-success-light me-2"
                      >
                        <i class="feather-eye"></i>
                      </a> -->
                      <a href="/lesson" class="btn btn-sm bg-danger-light" title="Add Lesson">
                        <i class="feather-plus"></i>
                      </a>
                    </div>
                  </td>
                </tr>
                <%})%>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
