<div class="sidebar" id="sidebar">
  <div class="sidebar-inner slimscroll">
    <div id="sidebar-menu" class="sidebar-menu">
      <ul>
        <li class="menu-title">
          <span>Main Menu</span>
        </li>
        <%if(user.role=='admin'){%>
        <li
          class="<%= ( active_path === routes.admin_dashboard || active_path === routes.teacher_dashboard || active_path ===routes.users_dashboard) && 'submenu active' %>">
          <a href="<%- routes.admin_dashboard %>"><i class="feather-grid"></i> <span> Dashboard</span>
        </li>
          <li
          class="<%= ( active_path ===routes.users || active_path == routes.users_grid || active_path === routes.users_details || active_path ===routes.add_users || active_path ===routes.edit_users) && 'submenu active' %>">
          <a href="#"><i class="fas fa-graduation-cap"></i> <span> Users</span>
            <span class="menu-arrow"></span></a>
          <ul>
            <li>
              <a href="/<%- routes.users%>"
                class="<%= active_path==routes.users || active_path == routes.users_grid ? 'active' : '' %>">Users
                List</a>
            </li>
            <li><a href="/<%- routes.add_users%>" class="<%= active_path==routes.add_users ? 'active' : '' %>">Add
                User</a>
            </li>
          </ul>
        </li>
        <%}%>
       
        <%if(user.role!='class_rep'){%>
        <li
          class="<%= active_path==routes.claim || active_path==routes.edit_claim || active_path === routes.add_claim ? 'active' : '' %>">
          <a href="/<%- routes.claims%>">
            <i class="fas fa-clipboard-list"></i> <span>My Claims</span></a>
        </li>
        <%}%>

        <%if(user.role == 'hod'){%>
          <li
            class="<%= active_path==routes.claim || active_path==routes.edit_claim || active_path === routes.add_claim ? 'active' : '' %>">
            <a href="/<%- routes.claim_approvals%>">
              <i class="fas fa-clipboard-list"></i> <span>Claim Approvals</span></a>
          </li>
          <%}%>

        <%if(user.role=='class_rep'){%>
          <li
          class="<%= active_path==routes.claim || active_path==routes.edit_claim || active_path === routes.add_claim ? 'active' : '' %>">
          <a href="/<%- routes.lesson%>">
            <i class="fas fa-clipboard-list"></i> <span>Lessons</span></a>
        </li>
        <%}%>

      </ul>
    </div>
  </div>
</div>